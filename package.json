{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "Typescript boilerplate for basic web server",
  "main": "dist/src/index.js",
  "author": "Young.Kim",
  "license": "UNLICENSED",
  "scripts": {
    "watch-start": "yarn lint-ts && nodemon --watch src -e ts,tsx --exec ts-node src/index.ts",
    "build-ts": "tsc",
    "lint-ts": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "prettier-format": "prettier --config .prettierrc.json 'src/**/*.ts' --write",
    "serve": "node dist/src/index.js",
    "build": "ENV=production npm run lint && npm run build-ts && tsc-alias",
    "start": "npm run serve",
    "test": "TEST=true jest --runInBand",
    "test:coverage": "TEST=true jest --collect-coverage",
    "test:watch": "TEST=true jest --watchAll",
    "typeorm": "typeorm-ts-node-commonjs",
    "schema-log": "yarn typeorm schema:log -d src/dataSource.ts",
    "schema-sync": "yarn typeorm schema:sync -d src/dataSource.ts",
    "playground-script": "ts-node src/playground.ts"
  },
  "engines": {
    "node": "16.x.x"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bree": "^7.1.0",
    "@types/chalk": "^2.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "2.13.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^6.0.2",
    "@types/koa__cors": "^3.0.1",
    "@types/koa__router": "^8.0.2",
    "@types/node": "^15.0.2",
    "@types/pino": "^6.3.11",
    "@types/shelljs": "^0.8.7",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.4.4",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.6.2",
    "shelljs": "^0.8.3",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@koa/router": "^10.0.0",
    "async-mutex": "^0.3.2",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "bree": "^9.0.1",
    "chalk": "^4.1.1",
    "class-validator": "^0.13.1",
    "dotenv": "^9.0.2",
    "indicatorts": "^1.0.7",
    "ioredis": "^5.2.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-jwt": "^4.0.1",
    "mathjs": "^10.6.4",
    "moment-timezone": "^0.5.34",
    "pg": "^8.7.3",
    "pino": "^6.13.0",
    "pino-pretty": "^5.1.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.6",
    "uuid": "^8.3.2",
    "ws": "^7.4.6",
    "yargs": "^17.0.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/__test__"
    ],
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "src/tests/*"
    ]
  }
}
